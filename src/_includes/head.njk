{%- set absolutePageUrl -%}{{ page.url | url | absoluteUrl(env.url) }}{%- endset -%}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="preload" href="/css/page_{{ env.pkgVersion }}.css" as="style">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ (title + " - " + site.title) if title else site.title }}</title>
<meta name="description" content="{{ description or site.description }}">
<meta name="author" content="{{ site.author }}">
<meta name="robots" content="{{ 'index,follow' }}">
<meta name="keywords" content="Des Moines,IA,Photography,Pictures,Portraits,Family,Photos,Photoshoot,Marketing,Portfolio,Gallery,Images,Camera,Photographer">
<!-- Social Metadata -->
<meta property="og:locale" content="{{ site.language }}">
<meta property="og:site_name" content="{{ site.author }}">
<meta property="og:title" content="{{ (title + " - " + site.title) if title else site.title }}">
<meta property="og:description" content="{{ description or site.description }}">
<meta property="og:type" content="website">
<meta property="og:url" content="{{ absolutePageUrl }}">
<meta property="og:image" itemprop="image primaryImageOfPage" content="{{ env.url }}{{ pageImage or site.image }}">
<meta property="og:image:type" content="image/png">
<meta property="og:image:width" content="512" />
<meta property="og:image:height" content="512" />
<meta property="og:image:alt" content="Sarah Wilson DSM logo.">
<meta itemprop="name" content="{{ site.title }}">
<meta itemprop="url" content="{{ absolutePageUrl }}">
<meta itemprop="description" content="{{ description or site.description }}">
<meta name="twitter:image" content="{{ env.url }}{{ pageImage or site.image }}">
<meta name="twitter:card" content="summary">
<meta name="twitter:domain" content="www.sarahwilsondsm.com">
<meta name="twitter:title" property="og:title" itemprop="name" content="{{ (title + " - " + site.title) if title else site.title }}">
<meta name="twitter:description" property="og:description" itemprop="description" content="{{ description or site.description }}">
<meta name="theme-color" content="#ffffff">

<!-- Preconnect -->
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>

<!-- Icons -->
<link rel="shortcut icon" type="image/x-icon" href="{{ site.favicon }}">
<link rel="icon" type="image/png" sizes="16x16" href="/img/favicon-16x16.png">
<link rel="icon" type="image/png" sizes="32x32" href="/img/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="48x48" href="/img/favicon-48x48.png">
<link rel="icon" type="image/png" sizes="192x192"  href="/img/android-chrome-192x192.png">
<link rel="icon" type="image/png" sizes="512x512"  href="/img/android-chrome-512x512.png">
<link rel="apple-touch-icon" sizes="180x180" href="/img/apple-touch-icon.png">
<link rel="image_src" href="{{ site.image }}">

<!-- Other resources -->
<link rel="stylesheet" href="/css/page_{{ env.pkgVersion }}.css">
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>