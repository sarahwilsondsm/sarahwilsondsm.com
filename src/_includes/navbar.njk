<nav id="header"
  class="flex flex-col items-center w-full px-4 sm:h-16 bg-white shadow-none md:justify-between md:flex-row sm:px-6 py-2 sm:py-0">
  <div id="menuHeader"
    class="flex flex-row flex-no-wrap items-center self-start justify-between w-full sm:w-auto sm:self-center sm:flex-none">
    <div class="do-not-delete"></div>
    <div>
      <button id="menuBtn" class="block hamburger sm:hidden focus:outline-none bg-white pt-3" type="button" onclick="navToggle();"
        aria-label="Show Menu">
        <span class="hamburger__top-bun right-5"></span>
        <span class="hamburger__bottom-bun right-5"></span>
        <span class="block text-right text-color-default text-sm font-light mt-2">Menu</span>
      </button>
    </div>
  </div>
  <div id="menu"
    class="fixed inset-0 flex-col items-center self-end justify-center hidden h-full py-6 sm:relative sm:w-auto sm:self-center sm:flex sm:flex-row sm:py-0 bg-white/95">
    {% for link in contentful.menuLinks %}
      <a class="nav" href="{{ link.slug }}">{{ link.title }}</a>
    {% endfor %}
  </div>
  <div></div>
</nav>
<div id="header-filler"></div>